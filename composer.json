{
    "name": "neix/fx-platform",
    "description": "Plataforma FX con arquitectura por capas",
    "type": "project",
    "require": {
        "php": "^8.1",
        "cboden/ratchet": "^0.4",
        "react/event-loop": "^1.0",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
